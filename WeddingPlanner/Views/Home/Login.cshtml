@model LoginUser


<h1>Sign In</h1>
<a asp-action="Index" asp-controller="home">REGISTER</a>

<form class="col-5" asp-action="SignIn" asp-controller="home" method="post">
    <div class="form-group">
        <span asp-validation-for="LoginEmail"></span></br>
        <label asp-for="LoginEmail"></label>
        <input asp-for="LoginEmail" class="form-control">
    </div>

    <div class="form-group">
        <span asp-validation-for="LoginPassword"></span></br>
        <label asp-for="LoginPassword"></label>
        <input asp-for="LoginPassword" class="form-control">
    </div>

    <div class="form-group">
        <input class="btn btn-dark" type="submit" value="Sign In">
    </div>
</form>