@{
    ViewData["Title"] = "Home Page";
}

@model Product

<h1 class="mx-auto col-5">
    <a asp-action="Products" asp-controller="Home">Products</a> | 
    <a asp-action="Categories" asp-controller="Home">Categories</a>
</h1>

<div class="row justify-content-around">
    <form asp-action="AddProduct" asp-controller="Home" method="post">
        <h1>Add Product:</h1>
        <div class="form-group">
            <span class="validation" asp-validation-for="Name"></span><br>
            <label for="Name">Name:</label>
            <input class="form-control" asp-for="Name">
        </div>

        <div class="form-group">
            <span class="validation" asp-validation-for="Price"></span><br>
            <label for="Price">Price</label>
            <input class="form-control" asp-for="Price">
        </div>

        <div class="form-group">
            <span class="validation" asp-validation-for="Description"></span><br>
            <label for="Description">Description:</label><br>
            <textarea class="form-control" cols="10" rows="5" asp-for="Description"></textarea>
        </div>

        <div class="form-group">
            <input type="Submit" value="Add Product" class="btn btn-danger">
        </div>
    </form>

    <div class="col-5">
        <h2>Existing Products:</h2>
        @foreach(var p in ViewBag.Products)
        {
            <a asp-action="ShowProduct" asp-controller="Home" asp-route-prodId="@p.ProductId">@p.Name</a><br>
        }
    </div>
</div>