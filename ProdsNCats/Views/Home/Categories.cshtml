@model Category

<h1 class="mx-auto col-5">
    <a asp-action="Index" asp-controller="Home">Products</a> | 
    <a asp-action="Categories" asp-controller="Home">Categories</a>
</h1>

<div class="row justify-content-around">
    <form asp-action="AddCategory" asp-controller="Home" method="post">
        
        <h1>Add Category:</h1>
        
        <div class="form-group">
            <span class="validation" asp-validation-for="Name"></span><br>
            <label for="Name">Name:</label>
            <input class="form-control" asp-for="Name">
        </div>
                
        <div class="form-group">
            <input type="Submit" value="Add Category" class="btn btn-danger">
        </div>
    </form>

    <div class="col-5">
        <h2>Existing Categories:</h2>
        @foreach(var c in ViewBag.Categories)
        {
            <a asp-action="ShowCategory" asp-controller="Home"
            asp-route-categoryId="@c.CategoryId">@c.Name</a><br>
        }
    </div>
</div>